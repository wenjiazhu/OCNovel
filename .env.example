# Gemini API配置
GEMINI_API_KEY=

# 嵌入模型配置
OPENAI_EMBEDDING_API_KEY=
OPENAI_EMBEDDING_API_BASE=https://api.siliconflow.cn/v1

# 大纲模型配置
OPENAI_OUTLINE_API_KEY=
OPENAI_OUTLINE_API_BASE=https://api.siliconflow.cn/v1

# 内容模型配置
OPENAI_CONTENT_API_KEY=
OPENAI_CONTENT_API_BASE=https://api.siliconflow.cn/v1

# 超时和重试配置
GEMINI_TIMEOUT=300
GEMINI_MAX_RETRIES=3
GEMINI_RETRY_DELAY=90
OPENAI_CONTENT_TIMEOUT=180
OPENAI_OUTLINE_TIMEOUT=120
OPENAI_EMBEDDING_TIMEOUT=60
OPENAI_RETRY_DELAY=15

# ==============================================
# 火山引擎DeepSeek-V3.1配置
# ==============================================

# 火山引擎API密钥（必填）
# 从火山引擎控制台获取：https://console.volcengine.com/ark/
VOLCENGINE_API_KEY=

# API端点（默认值已经是正确的，通常不需要修改）
VOLCENGINE_API_ENDPOINT=https://ark.cn-beijing.volces.com/api/v3

# 大纲生成模型配置
VOLCENGINE_OUTLINE_MODEL_ID=deepseek-v3-1-250821
VOLCENGINE_OUTLINE_TEMPERATURE=1.0

# 内容生成模型配置
VOLCENGINE_CONTENT_MODEL_ID=deepseek-v3-1-250821
VOLCENGINE_CONTENT_TEMPERATURE=0.7

# 深度思考模式（推荐开启以提升生成质量）
VOLCENGINE_THINKING_ENABLED=true

# 请求超时时间（秒）
VOLCENGINE_TIMEOUT=120

# 最大输出token数
VOLCENGINE_MAX_TOKENS=8192

# 重试延迟（秒）
VOLCENGINE_RETRY_DELAY=15

# 最大重试次数
VOLCENGINE_MAX_RETRIES=3

# 是否启用备用模型（推荐开启）
VOLCENGINE_FALLBACK_ENABLED=true